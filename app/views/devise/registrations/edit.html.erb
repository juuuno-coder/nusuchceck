<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <!-- 헤더 -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-8 py-6">
      <h1 class="text-2xl font-bold text-white">계정 정보 수정</h1>
      <p class="mt-1 text-blue-100">회원 정보를 수정하고 비밀번호를 변경하세요</p>
    </div>

    <div class="p-8 md:p-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6", data: { controller: "form-validation" } }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- 회원 유형 표시 (수정 불가) -->
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
          <div class="flex items-center">
            <% if resource.master? %>
              <svg class="w-10 h-10 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            <% else %>
              <svg class="w-10 h-10 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
            <% end %>
            <div>
              <p class="text-sm font-medium text-gray-500">회원 유형</p>
              <p class="text-lg font-bold text-gray-900"><%= resource.display_role %></p>
            </div>
          </div>
        </div>

        <!-- 기본 정보 섹션 -->
        <div class="space-y-5">
          <h2 class="text-lg font-bold text-gray-900 border-b border-gray-200 pb-2">기본 정보</h2>

          <!-- 이름 -->
          <div>
            <label for="user_name" class="block text-sm font-semibold text-gray-700 mb-1">
              이름 <span class="text-red-500">*</span>
            </label>
            <%= f.text_field :name, autocomplete: "name", placeholder: "홍길동", class: input_classes(:text) %>
          </div>

          <!-- 이메일 -->
          <div>
            <label for="user_email" class="block text-sm font-semibold text-gray-700 mb-1">
              이메일 <span class="text-red-500">*</span>
            </label>
            <%= f.email_field :email, autocomplete: "email", placeholder: "example@email.com", class: input_classes(:text) %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p class="mt-1 text-sm text-amber-600">
                <%= resource.unconfirmed_email %> 주소로 확인 이메일이 발송되었습니다.
              </p>
            <% end %>
          </div>

          <!-- 전화번호 -->
          <div>
            <label for="user_phone" class="block text-sm font-semibold text-gray-700 mb-1">전화번호</label>
            <%= f.telephone_field :phone, autocomplete: "tel", placeholder: "010-1234-5678", class: input_classes(:text) %>
            <p class="mt-1 text-xs text-gray-500">형식: 010-1234-5678</p>
          </div>

          <!-- 주소 -->
          <div>
            <label for="user_address" class="block text-sm font-semibold text-gray-700 mb-1">주소</label>
            <%= f.text_field :address, autocomplete: "address-level1", placeholder: "서울시 강남구 역삼동 123-45", class: input_classes(:text) %>
          </div>
        </div>

        <!-- 비밀번호 변경 섹션 -->
        <div class="space-y-5 pt-6 border-t border-gray-200">
          <div>
            <h2 class="text-lg font-bold text-gray-900 border-b border-gray-200 pb-2">비밀번호 변경</h2>
            <p class="mt-2 text-sm text-gray-500">비밀번호를 변경하지 않으려면 이 필드를 비워두세요</p>
          </div>

          <!-- 새 비밀번호 -->
          <div>
            <label for="user_password" class="block text-sm font-semibold text-gray-700 mb-1">
              새 비밀번호
            </label>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "변경하지 않으려면 비워두세요", class: input_classes(:text) %>
            <p class="mt-1 text-xs text-gray-500">
              <% if @minimum_password_length %>
                최소 <%= @minimum_password_length %>자 이상
              <% end %>
            </p>
          </div>

          <!-- 새 비밀번호 확인 -->
          <div>
            <label for="user_password_confirmation" class="block text-sm font-semibold text-gray-700 mb-1">
              새 비밀번호 확인
            </label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "새 비밀번호를 다시 입력", class: input_classes(:text) %>
          </div>

          <!-- 현재 비밀번호 (필수) -->
          <div>
            <label for="user_current_password" class="block text-sm font-semibold text-gray-700 mb-1">
              현재 비밀번호 <span class="text-red-500">*</span>
            </label>
            <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "현재 비밀번호 입력 (필수)", class: input_classes(:text) %>
            <p class="mt-1 text-xs text-gray-500">정보 변경을 위해 현재 비밀번호를 입력해주세요</p>
          </div>
        </div>

        <!-- 저장 버튼 -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
          <%= f.submit "변경사항 저장", class: "#{btn_classes(:primary, :lg)}", data: { "button-loading-target": "button" } %>
          <%= link_to "취소", :back, class: "#{btn_classes(:secondary, :md)}" %>
        </div>
      <% end %>

      <!-- 계정 삭제 섹션 -->
      <div class="mt-10 pt-8 border-t border-gray-200">
        <h2 class="text-lg font-bold text-gray-900 mb-2">계정 삭제</h2>
        <p class="text-sm text-gray-600 mb-4">
          계정을 삭제하면 모든 데이터가 영구적으로 삭제되며 복구할 수 없습니다.
        </p>
        <div class="flex items-center justify-between bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-red-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <div>
              <p class="text-sm font-semibold text-red-800">위험한 작업입니다</p>
              <p class="text-xs text-red-600">이 작업은 되돌릴 수 없습니다</p>
            </div>
          </div>
          <%= button_to "계정 삭제", registration_path(resource_name),
              data: { turbo_method: :delete, turbo_confirm: "정말로 계정을 삭제하시겠습니까? 이 작업은 되돌릴 수 없습니다." },
              method: :delete,
              class: "px-4 py-2 bg-red-600 text-white text-sm font-semibold rounded-lg hover:bg-red-700 transition-colors" %>
        </div>
      </div>
    </div>
  </div>
</div>
