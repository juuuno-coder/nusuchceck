<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">결제 감사 로그</h1>
    <p class="mt-2 text-sm text-gray-600">모든 결제 시도, 성공, 실패 이력을 추적합니다.</p>
  </div>

  <!-- 통계 카드 -->
  <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-600">결제 시도</div>
      <div class="text-2xl font-bold text-blue-600"><%= @stats[:total_attempts] %></div>
    </div>

    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-600">결제 성공</div>
      <div class="text-2xl font-bold text-green-600"><%= @stats[:total_success] %></div>
    </div>

    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-600">결제 실패</div>
      <div class="text-2xl font-bold text-red-600"><%= @stats[:total_fail] %></div>
    </div>

    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-600">환불</div>
      <div class="text-2xl font-bold text-yellow-600"><%= @stats[:total_refund] %></div>
    </div>

    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-600">취소</div>
      <div class="text-2xl font-bold text-gray-600"><%= @stats[:total_cancel] %></div>
    </div>

    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-600">성공률</div>
      <div class="text-2xl font-bold text-purple-600"><%= number_to_percentage(@stats[:success_rate], precision: 1) %></div>
    </div>
  </div>

  <!-- 검색 필터 -->
  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <%= search_form_for @q, url: admin_payment_audit_logs_path, method: :get, html: { class: "space-y-4" } do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Action 필터 -->
        <div>
          <%= f.label :action_eq, "액션", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :action_eq,
                       options_for_select([
                         ["전체", ""],
                         ["결제 시도", "attempt"],
                         ["결제 성공", "success"],
                         ["결제 실패", "fail"],
                         ["환불", "refund"],
                         ["취소", "cancel"],
                         ["웹훅 수신", "webhook_received"]
                       ], params.dig(:q, :action_eq)),
                       {},
                       class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <!-- User ID 필터 -->
        <div>
          <%= f.label :user_id_eq, "사용자 ID", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :user_id_eq,
                           placeholder: "사용자 ID",
                           class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <!-- IP Address 필터 -->
        <div>
          <%= f.label :ip_address_cont, "IP 주소", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :ip_address_cont,
                           placeholder: "IP 주소",
                           class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <!-- 날짜 필터 -->
        <div>
          <%= f.label :created_at_gteq, "날짜 (이후)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.date_field :created_at_gteq,
                           class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>

      <div class="flex gap-2">
        <%= f.submit "검색", class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition" %>
        <%= link_to "초기화", admin_payment_audit_logs_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition" %>
      </div>
    <% end %>
  </div>

  <!-- 테이블 -->
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">액션</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">사용자</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">에스크로</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">상세 정보</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IP 주소</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">생성일시</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">액션</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @payment_audit_logs.each do |log| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= log.id %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% action_class = case log.action
                                when "success" then "bg-green-100 text-green-800"
                                when "fail" then "bg-red-100 text-red-800"
                                when "attempt" then "bg-blue-100 text-blue-800"
                                when "refund" then "bg-yellow-100 text-yellow-800"
                                when "cancel" then "bg-gray-100 text-gray-800"
                                when "webhook_received" then "bg-purple-100 text-purple-800"
                                else "bg-gray-100 text-gray-800"
                                end %>
              <span class="px-2 py-1 text-xs font-medium rounded-full <%= action_class %>">
                <%= log.action %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <% if log.user %>
                <%= link_to log.user.email, admin_user_path(log.user), class: "text-blue-600 hover:text-blue-800" %>
              <% else %>
                <span class="text-gray-400">-</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <% if log.escrow_transaction %>
                <%= link_to "##{log.escrow_transaction.id}", admin_escrow_transaction_path(log.escrow_transaction), class: "text-blue-600 hover:text-blue-800" %>
              <% else %>
                <span class="text-gray-400">-</span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-600">
              <% if log.details.present? %>
                <div class="max-w-xs truncate">
                  <%= log.details["order_id"] || log.details["error_message"]&.truncate(30) || log.details.keys.join(", ") %>
                </div>
              <% else %>
                <span class="text-gray-400">-</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= log.ip_address %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
              <%= l(log.created_at, format: :short) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <%= link_to "상세", admin_payment_audit_log_path(log), class: "text-blue-600 hover:text-blue-800" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <!-- 페이지네이션 -->
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <%= paginate @payment_audit_logs, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>
