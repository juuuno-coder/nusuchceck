<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <%= link_to customers_requests_path, class: "text-sm text-blue-600 hover:text-blue-800 flex items-center" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      목록으로
    <% end %>
    <h1 class="text-2xl font-bold text-gray-900 mt-2">새 신고 접수</h1>
    <p class="text-sm text-gray-500 mt-1">누수 증상에 대한 정보를 입력해 주세요.</p>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with(model: @request, url: customers_requests_path, html: { multipart: true }, class: "space-y-6") do |f| %>

      <% if @request.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-sm font-medium text-red-800 mb-2">입력 오류가 있습니다:</h3>
          <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
            <% @request.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- 증상 유형 -->
      <div>
        <%= f.label :symptom_type, "증상 유형", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :symptom_type,
              options_for_select([
                ["선택해 주세요", ""],
                ["벽면 누수", "wall_leak"],
                ["천장 누수", "ceiling_leak"],
                ["바닥 누수", "floor_leak"],
                ["배관 누수", "pipe_leak"],
                ["화장실 누수", "toilet_leak"],
                ["외부 누수", "outdoor_leak"]
              ], @request.symptom_type),
              {}, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- 건물 유형 -->
      <div>
        <%= f.label :building_type, "건물 유형", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :building_type,
              options_for_select([
                ["선택해 주세요", ""],
                ["아파트", "apartment"],
                ["빌라", "villa"],
                ["주택", "house"],
                ["사무실", "office"],
                ["상가", "store"],
                ["공장", "factory"],
                ["기타", "other_building"]
              ], @request.building_type),
              {}, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- 주소 -->
      <div>
        <%= f.label :address, "주소", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :address,
              placeholder: "예: 서울시 강남구 테헤란로 123",
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- 상세 주소 -->
      <div>
        <%= f.label :address_detail, "상세 주소", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :address_detail,
              placeholder: "예: 101동 502호",
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- 층수 -->
      <div>
        <%= f.label :floor, "층수", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :floor,
              placeholder: "예: 5층",
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- 설명 -->
      <div>
        <%= f.label :description, "상세 설명", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :description,
              rows: 5,
              placeholder: "누수 증상에 대해 자세히 설명해 주세요. (발생 시점, 증상, 피해 정도 등)",
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <!-- 희망 방문 일시 -->
      <div>
        <%= f.label :preferred_date, "희망 방문 일시", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.datetime_local_field :preferred_date,
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        <p class="mt-1 text-xs text-gray-500">선택 사항입니다. 가능한 일시를 지정해 주세요.</p>
      </div>

      <!-- 사진 업로드 -->
      <div>
        <%= f.label :photos, "사진 첨부", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.file_field :photos,
              multiple: true,
              accept: "image/*",
              class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
        <p class="mt-1 text-xs text-gray-500">최대 5장까지 업로드 가능합니다. (JPG, PNG)</p>
      </div>

      <!-- 제출 버튼 -->
      <div class="flex items-center justify-end gap-3 pt-4 border-t">
        <%= link_to "취소", customers_requests_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-medium text-sm" %>
        <%= f.submit "신고 접수", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium text-sm cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
