<div class="max-w-lg mx-auto">
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 md:p-10">
    <div class="text-center mb-8">
      <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-gray-900">새 비밀번호 설정</h1>
      <p class="mt-2 text-gray-500">새로운 비밀번호를 입력하세요</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-5" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <!-- 새 비밀번호 -->
      <div>
        <label for="user_password" class="block text-sm font-semibold text-gray-700 mb-1">
          새 비밀번호 <span class="text-red-500">*</span>
        </label>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "6자 이상 입력", class: input_classes(:text) %>
        <p class="mt-1 text-xs text-gray-500">
          <% if @minimum_password_length %>
            최소 <%= @minimum_password_length %>자 이상
          <% end %>
        </p>
      </div>

      <!-- 비밀번호 확인 -->
      <div>
        <label for="user_password_confirmation" class="block text-sm font-semibold text-gray-700 mb-1">
          비밀번호 확인 <span class="text-red-500">*</span>
        </label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "비밀번호를 다시 입력", class: input_classes(:text) %>
      </div>

      <!-- 변경 버튼 -->
      <div class="pt-2">
        <%= f.submit "비밀번호 변경", class: "w-full #{btn_classes(:success, :lg)}" %>
      </div>
    <% end %>

    <!-- 하단 링크 -->
    <div class="mt-6 text-center text-sm">
      <div class="flex items-center justify-center gap-4 text-gray-500">
        <%= link_to "로그인", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium" %>
        <span>•</span>
        <%= link_to "회원가입", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium" %>
      </div>
    </div>
  </div>
</div>
