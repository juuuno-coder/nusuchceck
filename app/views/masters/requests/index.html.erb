<div class="space-y-6">
  <!-- 헤더 -->
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-900">배정된 신고 목록</h1>
  </div>

  <!-- 검색/필터 -->
  <div class="bg-white rounded-lg shadow p-4">
    <%= search_form_for @q, url: masters_requests_path, html: { method: :get, class: "flex flex-col sm:flex-row gap-3" } do |f| %>
      <div class="flex-1">
        <%= f.select :status_eq,
              options_for_select([
                ["전체 상태", ""],
                ["마스터 배정", "assigned"],
                ["방문 중", "visiting"],
                ["탐지 중", "detecting"],
                ["누수 미확인", "no_leak_found"],
                ["견적 대기", "estimate_pending"],
                ["견적 제출", "estimate_submitted"],
                ["공사 합의", "construction_agreed"],
                ["에스크로 입금", "escrow_deposited"],
                ["공사 진행", "constructing"],
                ["공사 완료", "construction_completed"],
                ["종료", "closed"],
                ["취소", "cancelled"]
              ], params.dig(:q, :status_eq)),
              {}, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" %>
      </div>
      <div class="flex-1">
        <%= f.select :symptom_type_eq,
              options_for_select([
                ["전체 증상", ""],
                ["벽면 누수", "wall_leak"],
                ["천장 누수", "ceiling_leak"],
                ["바닥 누수", "floor_leak"],
                ["배관 누수", "pipe_leak"],
                ["화장실 누수", "toilet_leak"],
                ["외부 누수", "outdoor_leak"]
              ], params.dig(:q, :symptom_type_eq)),
              {}, class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" %>
      </div>
      <div class="flex gap-2">
        <%= f.submit "검색", class: "px-4 py-2 bg-gray-800 text-white rounded-md hover:bg-gray-900 text-sm font-medium cursor-pointer" %>
        <%= link_to "초기화", masters_requests_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 text-sm font-medium" %>
      </div>
    <% end %>
  </div>

  <!-- 카드형 목록 -->
  <% if @requests.any? %>
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <% @requests.each do |request| %>
        <%= link_to masters_request_path(request), class: "block bg-white rounded-lg shadow hover:shadow-md transition" do %>
          <div class="p-5">
            <div class="flex items-center justify-between mb-3">
              <span class="text-sm font-mono text-gray-500">#<%= request.id %></span>
              <%= render "shared/status_badge", status: request.status %>
            </div>

            <h3 class="font-semibold text-gray-900 mb-1">
              <%= request.customer&.name || "고객" %>
            </h3>

            <%
              symptom_labels = {
                "wall_leak" => "벽면 누수", "ceiling_leak" => "천장 누수",
                "floor_leak" => "바닥 누수", "pipe_leak" => "배관 누수",
                "toilet_leak" => "화장실 누수", "outdoor_leak" => "외부 누수"
              }
            %>
            <p class="text-sm text-blue-600 font-medium mb-2"><%= symptom_labels[request.symptom_type] || request.symptom_type %></p>

            <div class="space-y-1 text-sm text-gray-600">
              <p class="flex items-center">
                <svg class="w-4 h-4 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <%= truncate(request.address, length: 30) %>
              </p>
              <% if request.assigned_at.present? %>
                <p class="flex items-center">
                  <svg class="w-4 h-4 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  배정일: <%= request.assigned_at.strftime("%Y-%m-%d %H:%M") %>
                </p>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- 페이지네이션 -->
    <div class="mt-6">
      <%= paginate @requests %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900">배정된 신고가 없습니다</h3>
      <p class="mt-2 text-sm text-gray-500">새로운 신고가 배정되면 여기에 표시됩니다.</p>
    </div>
  <% end %>
</div>
