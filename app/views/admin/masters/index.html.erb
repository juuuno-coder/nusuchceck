<div class="space-y-6">
  <h1 class="text-2xl font-bold text-gray-900">마스터 관리</h1>

  <!-- 데스크톱 테이블 -->
  <div class="hidden md:block bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200" aria-label="마스터 목록">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">이름</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">이메일</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">자격증</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">경력</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">인증상태</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">평점</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">작업</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @masters.each do |master| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0">
                    <span class="text-blue-600 font-bold text-sm"><%= master.name&.first %></span>
                  </div>
                  <span class="ml-3 text-sm font-medium text-gray-900"><%= master.name %></span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= master.email %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= master.license_number || "-" %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= master.experience_years ? "#{master.experience_years}년" : "-" %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if master.verified? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800" role="status">인증됨</span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800" role="status">미인증</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center text-sm">
                  <% if master.average_rating > 0 %>
                    <svg class="w-4 h-4 text-yellow-400 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                    <span class="text-gray-900"><%= master.average_rating %></span>
                    <span class="text-gray-400 ml-1">(<%= master.total_reviews_count %>)</span>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to "상세", admin_master_path(master), class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- 모바일 카드 목록 -->
  <div class="md:hidden space-y-3">
    <% @masters.each do |master| %>
      <%= link_to admin_master_path(master), class: "block bg-white rounded-xl shadow-sm border border-gray-100 p-4 hover:shadow-md transition" do %>
        <div class="flex items-center mb-3">
          <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0">
            <span class="text-blue-600 font-bold"><%= master.name&.first %></span>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-900"><%= master.name %></p>
            <p class="text-xs text-gray-500"><%= master.email %></p>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <% if master.verified? %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">인증됨</span>
            <% else %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">미인증</span>
            <% end %>
            <% if master.experience_years %>
              <span class="text-xs text-gray-500">경력 <%= master.experience_years %>년</span>
            <% end %>
          </div>
          <% if master.average_rating > 0 %>
            <div class="flex items-center text-sm">
              <svg class="w-4 h-4 text-yellow-400 mr-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <span class="text-gray-900 font-medium"><%= master.average_rating %></span>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- 페이지네이션 -->
  <% if @masters.respond_to?(:total_pages) %>
    <div class="mt-6">
      <%= paginate @masters %>
    </div>
  <% end %>
</div>
