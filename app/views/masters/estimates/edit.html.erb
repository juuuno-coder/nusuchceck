<div class="max-w-4xl mx-auto">
  <%= render "shared/page_header",
      title: "견적 수정",
      description: "견적 ##{@estimate.id} (신고 ##{@request.id})",
      back_path: masters_request_path(@request),
      back_text: "신고 상세로 돌아가기" %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- 좌측: 견적 폼 -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
        <%= form_with(model: [@request, @estimate], url: masters_request_estimate_path(@request, @estimate), method: :patch, class: "space-y-6") do |f| %>

          <%= render "shared/form_errors", resource: @estimate %>

          <!-- 견적 항목 -->
          <div data-controller="estimate-items">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-lg font-semibold text-gray-900">견적 항목</h2>
              <button type="button"
                      data-action="click->estimate-items#add"
                      class="inline-flex items-center px-3 py-1.5 bg-blue-100 text-blue-700 rounded-md hover:bg-blue-200 text-sm font-medium">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                항목 추가
              </button>
            </div>

            <div data-estimate-items-target="container" class="space-y-4">
              <% @estimate.parsed_line_items.each do |item| %>
                <div class="border rounded-lg p-4 bg-gray-50" data-estimate-items-target="item">
                  <div class="grid grid-cols-1 sm:grid-cols-6 gap-3">
                    <div class="sm:col-span-1">
                      <label class="block text-xs font-medium text-gray-500 mb-1">구분</label>
                      <select name="estimate[line_items][][category]"
                              class="<%= input_classes(:select) %> !text-sm !py-2">
                        <option value="trip" <%= "selected" if item[:category] == "trip" %>>출장비</option>
                        <option value="detection" <%= "selected" if item[:category] == "detection" %>>탐지</option>
                        <option value="construction" <%= "selected" if item[:category] == "construction" %>>공사</option>
                        <option value="material" <%= "selected" if item[:category] == "material" %>>자재</option>
                      </select>
                    </div>
                    <div class="sm:col-span-2">
                      <label class="block text-xs font-medium text-gray-500 mb-1">항목명</label>
                      <input type="text" name="estimate[line_items][][name]" value="<%= item[:name] %>"
                             class="<%= input_classes(:text) %> !text-sm !py-2">
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-500 mb-1">단위</label>
                      <input type="text" name="estimate[line_items][][unit]" value="<%= item[:unit] %>"
                             class="<%= input_classes(:text) %> !text-sm !py-2">
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-500 mb-1">수량</label>
                      <input type="number" name="estimate[line_items][][quantity]" value="<%= item[:quantity] %>" min="1"
                             class="<%= input_classes(:text) %> !text-sm !py-2"
                             data-action="input->estimate-items#calculate">
                    </div>
                    <div>
                      <label class="block text-xs font-medium text-gray-500 mb-1">단가</label>
                      <input type="number" name="estimate[line_items][][unit_price]" value="<%= item[:unit_price] %>" min="0" step="1000"
                             class="<%= input_classes(:text) %> !text-sm !py-2"
                             data-action="input->estimate-items#calculate">
                    </div>
                  </div>
                  <div class="flex items-center justify-between mt-3">
                    <span class="text-sm text-gray-600">
                      금액: <strong data-estimate-items-target="amount"><%= number_to_currency(item[:amount], unit: "₩", precision: 0) %></strong>
                    </span>
                    <button type="button"
                            data-action="click->estimate-items#remove"
                            class="text-red-500 hover:text-red-700 text-sm font-medium">
                      삭제
                    </button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>

          <!-- 비고 -->
          <div>
            <%= f.label :notes, "비고", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :notes,
                  rows: 3,
                  placeholder: "추가 설명이나 주의사항을 입력해 주세요.",
                  class: input_classes(:textarea) %>
          </div>

          <!-- 유효기간 -->
          <div>
            <%= f.label :valid_until, "유효기간", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :valid_until,
                  class: input_classes(:text) %>
          </div>

          <!-- 제출 버튼 -->
          <div class="flex items-center justify-end gap-3 pt-4 border-t">
            <%= link_to "취소", masters_request_path(@request), class: btn_classes(:secondary, :md) %>
            <%= f.submit "견적 수정", class: btn_classes(:primary, :md) %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 우측: 추천 항목 -->
    <div class="space-y-6">
      <% if defined?(@recommended_items) && @recommended_items&.any? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <h2 class="text-sm font-semibold text-gray-900 mb-3">추천 항목</h2>
          <div class="space-y-2">
            <% @recommended_items.each do |item| %>
              <button type="button"
                      class="w-full text-left p-3 border rounded-lg hover:bg-blue-50 transition text-sm"
                      data-action="click->estimate-items#addFromRecommended"
                      data-category="<%= item.category %>"
                      data-name="<%= item.name %>"
                      data-unit="<%= item.unit %>"
                      data-price="<%= item.default_price %>">
                <div class="flex items-center justify-between">
                  <span class="font-medium text-gray-900"><%= item.name %></span>
                  <span class="text-xs text-gray-500"><%= item.category_label %></span>
                </div>
                <% if item.default_price.present? %>
                  <span class="text-xs text-blue-600"><%= number_to_currency(item.default_price, unit: "₩", precision: 0) %></span>
                <% end %>
              </button>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if defined?(@standard_items) && @standard_items&.any? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
          <h2 class="text-sm font-semibold text-gray-900 mb-3">표준 항목</h2>
          <div class="space-y-2 max-h-96 overflow-y-auto">
            <% @standard_items.each do |item| %>
              <button type="button"
                      class="w-full text-left p-2 border rounded hover:bg-gray-50 transition text-sm"
                      data-action="click->estimate-items#addFromRecommended"
                      data-category="<%= item.category %>"
                      data-name="<%= item.name %>"
                      data-unit="<%= item.unit %>"
                      data-price="<%= item.default_price %>">
                <span class="text-gray-900"><%= item.name %></span>
                <span class="text-xs text-gray-500 ml-1">(<%= item.category_label %>)</span>
              </button>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
