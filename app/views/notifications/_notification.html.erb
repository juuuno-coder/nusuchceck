<div class="<%= notification.unread? ? 'bg-blue-50' : 'bg-white' %> hover:bg-gray-50 transition-smooth border-b border-gray-100 last:border-b-0"
     data-notification-id="<%= notification.id %>">
  <div class="p-4"
       data-action="click->notifications#markAsRead"
       data-notification-id="<%= notification.id %>">
    <div class="flex gap-3">
      <div class="flex-shrink-0 text-2xl">
        <%= notification.icon %>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-900">
          <%= notification.message %>
        </p>
        <p class="text-xs text-gray-500 mt-1">
          <%= time_ago_in_words(notification.created_at) %> ì „
        </p>
      </div>
      <% if notification.unread? %>
        <div class="flex-shrink-0">
          <span class="inline-block w-2 h-2 bg-blue-600 rounded-full"></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
