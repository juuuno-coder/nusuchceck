<div class="max-w-md mx-auto">
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 md:p-10">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">로그인</h1>
      <p class="mt-2 text-gray-500">누수체크 계정으로 로그인하세요</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <ul class="text-sm text-red-700 space-y-1">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- 이메일 -->
      <div>
        <label for="user_email" class="block text-sm font-semibold text-gray-700 mb-1">이메일</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@email.com", class: input_classes(:text) %>
      </div>

      <!-- 비밀번호 -->
      <div>
        <label for="user_password" class="block text-sm font-semibold text-gray-700 mb-1">비밀번호</label>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "비밀번호 입력", class: input_classes(:text) %>
      </div>

      <!-- Remember Me -->
      <div class="flex items-center justify-between">
        <label class="flex items-center cursor-pointer">
          <%= f.check_box :remember_me, class: "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
          <span class="ml-2 text-sm text-gray-600">로그인 상태 유지</span>
        </label>
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "비밀번호 찾기", new_password_path(resource_name), class: "text-sm text-blue-600 hover:text-blue-700 font-medium" %>
        <% end %>
      </div>

      <!-- 로그인 버튼 -->
      <div class="pt-2">
        <%= f.submit "로그인", class: "w-full #{btn_classes(:primary, :lg)}" %>
      </div>
    <% end %>

    <!-- 구분선 -->
    <div class="relative my-6">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-200"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-4 bg-white text-gray-500">또는</span>
      </div>
    </div>

    <!-- 회원가입 링크 -->
    <div class="text-center">
      <p class="text-sm text-gray-500">
        아직 계정이 없으신가요?
        <%= link_to "회원가입", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-semibold ml-1" %>
      </p>
    </div>
  </div>
</div>
