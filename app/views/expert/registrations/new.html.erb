<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 md:p-10">
    <div class="text-center mb-8">
      <div class="inline-flex items-center px-3 py-1 bg-emerald-100 text-emerald-700 rounded-full text-sm font-medium mb-4">
        전문가 가입
      </div>
      <h1 class="text-3xl font-bold text-gray-900">파트너 전문가 등록</h1>
      <p class="mt-2 text-gray-500">누수체크 전문가로 등록하고 고객과 만나세요</p>
    </div>

    <%= form_for(resource, as: resource_name, url: expert_registration_path, html: { class: "space-y-6" }) do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-red-800 font-semibold text-sm"><%= pluralize(resource.errors.count, "개의 오류") %>가 있습니다:</span>
          </div>
          <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- 마스터 타입 고정 -->
      <%= f.hidden_field :type, value: "Master" %>

      <!-- 기본 정보 섹션 -->
      <div class="border-b border-gray-100 pb-6">
        <h3 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
          <svg class="w-4 h-4 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          기본 정보
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-1">이름 <span class="text-red-500">*</span></label>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "홍길동", class: input_classes(:text) %>
          </div>
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-1">전화번호 <span class="text-red-500">*</span></label>
            <%= f.telephone_field :phone, autocomplete: "tel", placeholder: "010-1234-5678", class: input_classes(:text) %>
          </div>
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-1">이메일 <span class="text-red-500">*</span></label>
            <%= f.email_field :email, autocomplete: "email", placeholder: "expert@email.com", class: input_classes(:text) %>
          </div>
        </div>
      </div>

      <!-- 비밀번호 섹션 -->
      <div class="border-b border-gray-100 pb-6">
        <h3 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
          <svg class="w-4 h-4 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
          비밀번호
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-1">비밀번호 <span class="text-red-500">*</span></label>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "6자 이상 입력", class: input_classes(:text) %>
            <p class="mt-1 text-xs text-gray-500">
              <% if @minimum_password_length %>최소 <%= @minimum_password_length %>자 이상<% end %>
            </p>
          </div>
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-1">비밀번호 확인 <span class="text-red-500">*</span></label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "비밀번호를 다시 입력", class: input_classes(:text) %>
          </div>
        </div>
      </div>

      <!-- 전문 프로필 섹션 (단일 fields_for 블록) -->
      <%= f.fields_for :master_profile_attributes, resource.master_profile || resource.build_master_profile do |pf| %>

        <!-- 경력 + 전문 분야 -->
        <div class="border-b border-gray-100 pb-6">
          <h3 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
            <svg class="w-4 h-4 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
            </svg>
            전문 분야 및 경력
          </h3>

          <!-- 경력 연수 -->
          <div class="mb-4">
            <label class="block text-sm font-semibold text-gray-700 mb-1">경력 연수</label>
            <%= pf.select :experience_years,
              options_for_select([
                ["1년 미만", 0],
                ["1년", 1], ["2년", 2], ["3년", 3], ["4년", 4], ["5년", 5],
                ["6년", 6], ["7년", 7], ["8년", 8], ["9년", 9], ["10년", 10],
                ["11~15년", 13], ["16~20년", 18], ["21년 이상", 25]
              ], 0),
              {},
              class: input_classes(:text) %>
          </div>

          <!-- 전문 분야 체크박스 -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">
              전문 분야 <span class="text-gray-400 font-normal">(복수 선택 가능)</span>
            </label>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
              <% MasterProfile::SPECIALTY_OPTIONS.each do |specialty| %>
                <label class="flex items-center p-3 border border-gray-200 rounded-lg cursor-pointer hover:border-emerald-400 hover:bg-emerald-50 transition-colors has-[:checked]:border-emerald-500 has-[:checked]:bg-emerald-50">
                  <%= pf.check_box :specialty_types,
                    { multiple: true, include_hidden: false },
                    specialty, nil %>
                  <span class="text-sm font-medium text-gray-700 ml-2"><%= specialty %></span>
                </label>
              <% end %>
            </div>
            <p class="mt-2 text-xs text-gray-500">해당하는 전문 분야를 모두 선택해 주세요</p>
          </div>
        </div>

        <!-- 서비스 지역 섹션 -->
        <div class="border-b border-gray-100 pb-6">
          <h3 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
            <svg class="w-4 h-4 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            주요 서비스 지역
          </h3>
          <div class="space-y-2" id="service-areas-container">
            <div class="flex gap-2">
              <input type="text"
                id="service_area_input"
                name="user[master_profile_attributes][service_areas][]"
                placeholder="예: 서울시 강남구"
                class="<%= input_classes(:text) %> flex-1">
              <button type="button" onclick="addServiceArea()" class="px-3 py-2 bg-emerald-100 text-emerald-700 rounded-lg hover:bg-emerald-200 transition-colors text-sm font-medium whitespace-nowrap">
                + 추가
              </button>
            </div>
          </div>
          <p class="mt-2 text-xs text-gray-500">주요 활동 지역을 입력하면 해당 지역 고객과 우선 매칭됩니다</p>
        </div>

        <!-- 자기소개 섹션 -->
        <div class="border-b border-gray-100 pb-6">
          <h3 class="text-base font-semibold text-gray-800 mb-4 flex items-center">
            <svg class="w-4 h-4 mr-2 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            간단 자기소개 <span class="text-gray-400 font-normal text-sm ml-1">(선택)</span>
          </h3>
          <%= pf.text_area :bio,
            rows: 3,
            placeholder: "예: 15년 경력의 누수 전문가입니다. 아파트 욕실 누수, 옥상 방수 공사를 주로 합니다.",
            class: "#{input_classes(:text)} resize-none" %>
          <p class="mt-1 text-xs text-gray-500">시공 경험, 주요 작업 유형 등을 간단히 소개해 주세요</p>
        </div>

      <% end %> <!-- end fields_for -->

      <!-- 가입 버튼 -->
      <div class="pt-2">
        <%= f.submit "전문가 가입하기", class: "w-full px-6 py-3.5 bg-emerald-600 text-white font-semibold rounded-lg hover:bg-emerald-700 transition-colors cursor-pointer text-base" %>
      </div>
    <% end %>

    <!-- 가입 후 안내 -->
    <div class="mt-6 p-4 bg-emerald-50 rounded-lg border border-emerald-100">
      <h4 class="text-sm font-semibold text-emerald-800 mb-2">가입 후 진행 절차</h4>
      <ol class="text-xs text-emerald-700 space-y-1 list-decimal list-inside">
        <li>프로필에서 자격증, 경력사항, 계좌정보를 등록해 주세요</li>
        <li>관리자가 자격을 검토한 후 인증을 완료합니다 (1-2 영업일)</li>
        <li>인증 완료 후 공개 오더 목록에서 원하는 작업을 선택할 수 있습니다</li>
      </ol>
    </div>

    <!-- 하단 링크 -->
    <div class="mt-6 text-center text-sm text-gray-500">
      이미 계정이 있으신가요?
      <%= link_to "로그인", new_user_session_path, class: "text-emerald-600 hover:text-emerald-800 font-semibold" %>
    </div>

    <!-- 고객 가입 안내 -->
    <div class="mt-4 p-3 bg-gray-50 rounded-lg border border-gray-200 text-center">
      <p class="text-sm text-gray-600">
        누수 수리가 필요한 고객이신가요?
        <%= link_to "고객 회원가입", new_user_registration_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
      </p>
    </div>
  </div>
</div>

<script>
function addServiceArea() {
  const container = document.getElementById('service-areas-container');
  const firstInput = document.getElementById('service_area_input');

  const newRow = document.createElement('div');
  newRow.className = 'flex gap-2';
  newRow.innerHTML = `
    <input type="text"
      name="user[master_profile_attributes][service_areas][]"
      placeholder="예: 서울시 송파구"
      class="${firstInput.className}">
    <button type="button" onclick="this.parentElement.remove()"
      class="px-3 py-2 bg-red-100 text-red-600 rounded-lg hover:bg-red-200 transition-colors text-sm font-medium whitespace-nowrap">
      삭제
    </button>
  `;
  container.appendChild(newRow);
}
</script>
