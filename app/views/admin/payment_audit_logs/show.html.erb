<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">결제 감사 로그 #<%= @payment_audit_log.id %></h1>
        <p class="mt-2 text-sm text-gray-600">결제 이력 상세 정보</p>
      </div>
      <%= link_to "← 목록으로", admin_payment_audit_logs_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 transition" %>
    </div>
  </div>

  <div class="space-y-6">
    <!-- 기본 정보 -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">기본 정보</h2>
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <dt class="text-sm font-medium text-gray-500">액션</dt>
          <dd class="mt-1">
            <% action_class = case @payment_audit_log.action
                              when "success" then "bg-green-100 text-green-800"
                              when "fail" then "bg-red-100 text-red-800"
                              when "attempt" then "bg-blue-100 text-blue-800"
                              when "refund" then "bg-yellow-100 text-yellow-800"
                              when "cancel" then "bg-gray-100 text-gray-800"
                              when "webhook_received" then "bg-purple-100 text-purple-800"
                              else "bg-gray-100 text-gray-800"
                              end %>
            <span class="px-3 py-1 text-sm font-medium rounded-full <%= action_class %>">
              <%= @payment_audit_log.action %>
            </span>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">생성일시</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= l(@payment_audit_log.created_at, format: :long) %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">사용자</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @payment_audit_log.user %>
              <%= link_to @payment_audit_log.user.email, admin_user_path(@payment_audit_log.user), class: "text-blue-600 hover:text-blue-800" %>
              <span class="text-gray-500">(#<%= @payment_audit_log.user.id %>)</span>
            <% else %>
              <span class="text-gray-400">없음</span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">에스크로 거래</dt>
          <dd class="mt-1 text-sm text-gray-900">
            <% if @payment_audit_log.escrow_transaction %>
              <%= link_to "##{@payment_audit_log.escrow_transaction.id}", admin_escrow_transaction_path(@payment_audit_log.escrow_transaction), class: "text-blue-600 hover:text-blue-800" %>
              <span class="text-gray-500">
                (<%= @payment_audit_log.escrow_transaction.escrow_type %> / <%= number_to_currency(@payment_audit_log.escrow_transaction.amount, unit: "₩", precision: 0) %>)
              </span>
            <% else %>
              <span class="text-gray-400">없음</span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">IP 주소</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @payment_audit_log.ip_address || "알 수 없음" %></dd>
        </div>
      </dl>
    </div>

    <!-- 상세 정보 (JSON) -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">상세 정보 (Details)</h2>

      <% if @payment_audit_log.details.present? %>
        <div class="bg-gray-50 rounded-lg p-4 overflow-x-auto">
          <pre class="text-sm text-gray-800"><%= JSON.pretty_generate(@payment_audit_log.details) %></pre>
        </div>

        <!-- 주요 정보 하이라이트 -->
        <% if @payment_audit_log.details["order_id"] || @payment_audit_log.details["amount"] || @payment_audit_log.details["error_message"] %>
          <div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
            <% if @payment_audit_log.details["order_id"] %>
              <div class="bg-blue-50 rounded-lg p-4">
                <div class="text-sm font-medium text-blue-900">Order ID</div>
                <div class="mt-1 text-lg font-mono text-blue-700"><%= @payment_audit_log.details["order_id"] %></div>
              </div>
            <% end %>

            <% if @payment_audit_log.details["amount"] %>
              <div class="bg-green-50 rounded-lg p-4">
                <div class="text-sm font-medium text-green-900">금액</div>
                <div class="mt-1 text-lg font-semibold text-green-700">
                  <%= number_to_currency(@payment_audit_log.details["amount"].to_d, unit: "₩", precision: 0) %>
                </div>
              </div>
            <% end %>

            <% if @payment_audit_log.details["error_message"] %>
              <div class="bg-red-50 rounded-lg p-4">
                <div class="text-sm font-medium text-red-900">에러 메시지</div>
                <div class="mt-1 text-sm text-red-700"><%= @payment_audit_log.details["error_message"] %></div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <p class="text-sm text-gray-500">상세 정보가 없습니다.</p>
      <% end %>
    </div>

    <!-- 관련 로그 -->
    <% if @payment_audit_log.escrow_transaction %>
      <% related_logs = PaymentAuditLog.where(escrow_transaction: @payment_audit_log.escrow_transaction)
                                        .where.not(id: @payment_audit_log.id)
                                        .order(created_at: :desc)
                                        .limit(10) %>
      <% if related_logs.any? %>
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">관련 로그 (같은 에스크로 거래)</h2>
          <div class="space-y-2">
            <% related_logs.each do |log| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100">
                <div class="flex items-center space-x-4">
                  <% action_class = case log.action
                                    when "success" then "bg-green-100 text-green-800"
                                    when "fail" then "bg-red-100 text-red-800"
                                    when "attempt" then "bg-blue-100 text-blue-800"
                                    when "refund" then "bg-yellow-100 text-yellow-800"
                                    when "cancel" then "bg-gray-100 text-gray-800"
                                    when "webhook_received" then "bg-purple-100 text-purple-800"
                                    else "bg-gray-100 text-gray-800"
                                    end %>
                  <span class="px-2 py-1 text-xs font-medium rounded-full <%= action_class %>">
                    <%= log.action %>
                  </span>
                  <span class="text-sm text-gray-600"><%= l(log.created_at, format: :short) %></span>
                  <% if log.details["order_id"] %>
                    <span class="text-sm text-gray-500 font-mono"><%= log.details["order_id"] %></span>
                  <% end %>
                </div>
                <%= link_to "상세", admin_payment_audit_log_path(log), class: "text-blue-600 hover:text-blue-800 text-sm" %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
