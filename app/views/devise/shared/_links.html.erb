<%- if controller_name != 'sessions' %>
  <div class="mt-2">
    <%= link_to "로그인", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium hover:underline" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mt-2">
    <%= link_to "회원가입", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium hover:underline" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mt-2">
    <%= link_to "비밀번호를 잊으셨나요?", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium hover:underline" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="mt-2">
    <%= link_to "인증 메일 재전송", new_confirmation_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium hover:underline" %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="mt-2">
    <%= link_to "계정 잠금 해제", new_unlock_path(resource_name), class: "text-blue-600 hover:text-blue-700 font-medium hover:underline" %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="mt-2">
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}(으)로 로그인", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "text-blue-600 hover:text-blue-700 font-medium hover:underline" %>
    </div>
  <% end %>
<% end %>
