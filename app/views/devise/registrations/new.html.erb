<div class="max-w-lg mx-auto">
  <div class="bg-white rounded-2xl shadow-md p-8 md:p-10 border border-gray-100">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">회원가입</h1>
      <p class="mt-2 text-gray-500">누수체크에 가입하고 서비스를 이용하세요</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-red-800 font-semibold text-sm"><%= pluralize(resource.errors.count, "개의 오류") %>가 있습니다:</span>
          </div>
          <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- 유형 선택 -->
      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-3">회원 유형</label>
        <div class="grid grid-cols-2 gap-3">
          <label class="relative cursor-pointer">
            <%= f.radio_button :type, "Customer", class: "peer sr-only", checked: (resource.type.blank? || resource.type == "Customer") %>
            <div class="peer-checked:border-blue-600 peer-checked:bg-blue-50 peer-checked:ring-2 peer-checked:ring-blue-200 border-2 border-gray-200 rounded-xl p-4 text-center transition-all hover:border-gray-300">
              <svg class="w-8 h-8 mx-auto mb-2 text-gray-400 peer-checked:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              <span class="block text-sm font-semibold text-gray-700">고객</span>
              <span class="block text-xs text-gray-500 mt-1">누수 신고 및 수리 요청</span>
            </div>
          </label>
          <label class="relative cursor-pointer">
            <%= f.radio_button :type, "Master", class: "peer sr-only" %>
            <div class="peer-checked:border-blue-600 peer-checked:bg-blue-50 peer-checked:ring-2 peer-checked:ring-blue-200 border-2 border-gray-200 rounded-xl p-4 text-center transition-all hover:border-gray-300">
              <svg class="w-8 h-8 mx-auto mb-2 text-gray-400 peer-checked:text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="block text-sm font-semibold text-gray-700">마스터</span>
              <span class="block text-xs text-gray-500 mt-1">누수 탐지 및 시공 전문가</span>
            </div>
          </label>
        </div>
      </div>

      <!-- 이름 -->
      <div>
        <label for="user_name" class="block text-sm font-semibold text-gray-700 mb-1">이름 <span class="text-red-500">*</span></label>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "홍길동", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-gray-900 placeholder-gray-400" %>
      </div>

      <!-- 이메일 -->
      <div>
        <label for="user_email" class="block text-sm font-semibold text-gray-700 mb-1">이메일 <span class="text-red-500">*</span></label>
        <%= f.email_field :email, autocomplete: "email", placeholder: "example@email.com", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-gray-900 placeholder-gray-400" %>
      </div>

      <!-- 비밀번호 -->
      <div>
        <label for="user_password" class="block text-sm font-semibold text-gray-700 mb-1">비밀번호 <span class="text-red-500">*</span></label>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "6자 이상 입력", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-gray-900 placeholder-gray-400" %>
        <p class="mt-1 text-xs text-gray-500">
          <% if @minimum_password_length %>
            최소 <%= @minimum_password_length %>자 이상
          <% end %>
        </p>
      </div>

      <!-- 비밀번호 확인 -->
      <div>
        <label for="user_password_confirmation" class="block text-sm font-semibold text-gray-700 mb-1">비밀번호 확인 <span class="text-red-500">*</span></label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "비밀번호를 다시 입력", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-gray-900 placeholder-gray-400" %>
      </div>

      <!-- 전화번호 -->
      <div>
        <label for="user_phone" class="block text-sm font-semibold text-gray-700 mb-1">전화번호</label>
        <%= f.telephone_field :phone, autocomplete: "tel", placeholder: "010-1234-5678", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-gray-900 placeholder-gray-400" %>
      </div>

      <!-- 주소 -->
      <div>
        <label for="user_address" class="block text-sm font-semibold text-gray-700 mb-1">주소</label>
        <%= f.text_field :address, autocomplete: "address-level1", placeholder: "서울시 강남구 역삼동 123-45", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-gray-900 placeholder-gray-400" %>
      </div>

      <!-- 가입 버튼 -->
      <div class="pt-2">
        <%= f.submit "회원가입", class: "w-full py-3 px-4 bg-blue-700 hover:bg-blue-800 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-200 cursor-pointer" %>
      </div>
    <% end %>

    <!-- 하단 링크 -->
    <div class="mt-6 text-center text-sm text-gray-500">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
