<% content_for :title, "#{@master.name} 전문가 프로필" %>

<div class="max-w-4xl mx-auto py-8 px-4 space-y-6">
  <!-- 뒤로가기 -->
  <% if user_signed_in? %>
    <%= link_to :back, class: "text-sm text-blue-600 hover:text-blue-800 flex items-center mb-2" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      돌아가기
    <% end %>
  <% end %>

  <!-- 프로필 헤더 -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 md:p-8">
    <div class="flex flex-col sm:flex-row items-start sm:items-center gap-5">
      <!-- 아바타 -->
      <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-blue-500 to-blue-700 flex items-center justify-center flex-shrink-0">
        <span class="text-white font-bold text-3xl"><%= @master.name&.first %></span>
      </div>

      <!-- 기본 정보 -->
      <div class="flex-1">
        <div class="flex items-center gap-3 flex-wrap">
          <h1 class="text-2xl font-bold text-gray-900"><%= @master.name %></h1>
          <% if @profile&.verified? %>
            <span class="inline-flex items-center gap-1 px-3 py-1 bg-blue-100 text-blue-800 text-sm font-semibold rounded-full">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              인증 전문가
            </span>
          <% end %>
        </div>

        <!-- 별점 + 통계 -->
        <div class="flex items-center gap-6 mt-3 flex-wrap">
          <% if @avg_rating > 0 %>
            <div class="flex items-center gap-1.5">
              <div class="flex">
                <% 5.times do |i| %>
                  <svg class="w-5 h-5 <%= i < @avg_rating.round ? 'text-yellow-400' : 'text-gray-200' %>" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                <% end %>
              </div>
              <span class="font-bold text-gray-900"><%= @avg_rating %></span>
              <span class="text-sm text-gray-500">(<%= @review_count %>개 리뷰)</span>
            </div>
          <% end %>

          <div class="flex items-center gap-1.5 text-gray-600">
            <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-sm font-medium">완료 <%= @completed_count %>건</span>
          </div>

          <% if @profile&.experience_years.to_i > 0 %>
            <div class="flex items-center gap-1.5 text-gray-600">
              <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span class="text-sm font-medium">경력 <%= @profile.experience_years %>년</span>
            </div>
          <% end %>
        </div>

        <!-- 소개글 -->
        <% if @profile&.bio.present? %>
          <p class="mt-3 text-sm text-gray-700 leading-relaxed"><%= @profile.bio %></p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- 좌측: 전문 정보 -->
    <div class="space-y-4">
      <!-- 전문 분야 -->
      <% if @profile&.specialty_types_list.any? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-5">
          <h2 class="text-sm font-semibold text-gray-500 uppercase mb-3">전문 분야</h2>
          <div class="flex flex-wrap gap-2">
            <% @profile.specialty_types_list.each do |specialty| %>
              <span class="px-3 py-1 bg-blue-50 text-blue-700 text-sm font-medium rounded-full"><%= specialty %></span>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- 서비스 지역 -->
      <% if @profile&.service_areas_list.any? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-5">
          <h2 class="text-sm font-semibold text-gray-500 uppercase mb-3">서비스 지역</h2>
          <div class="flex flex-wrap gap-2">
            <% @profile.service_areas_list.each do |area| %>
              <span class="flex items-center gap-1 px-3 py-1 bg-green-50 text-green-700 text-sm rounded-full">
                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
                <%= area %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- 보유 장비 -->
      <% if @profile&.equipment_list.any? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-5">
          <h2 class="text-sm font-semibold text-gray-500 uppercase mb-3">보유 장비</h2>
          <ul class="space-y-1.5">
            <% @profile.equipment_list.each do |eq| %>
              <li class="flex items-center gap-2 text-sm text-gray-700">
                <span class="w-1.5 h-1.5 bg-blue-500 rounded-full flex-shrink-0"></span>
                <%= eq %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <!-- 우측: 리뷰 -->
    <div class="md:col-span-2 space-y-4">
      <!-- 리뷰 목록 -->
      <% if @reviews.any? %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100">
          <div class="px-6 py-4 border-b border-gray-100">
            <h2 class="text-lg font-semibold text-gray-900">고객 리뷰</h2>
          </div>
          <div class="divide-y divide-gray-100">
            <% @reviews.each do |review| %>
              <div class="p-5">
                <div class="flex items-start justify-between mb-2">
                  <div class="flex items-center gap-2">
                    <!-- 별점 -->
                    <div class="flex">
                      <% 5.times do |i| %>
                        <svg class="w-4 h-4 <%= i < review.rating ? 'text-yellow-400' : 'text-gray-200' %>" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      <% end %>
                    </div>
                    <span class="font-semibold text-gray-900"><%= review.rating.to_f %>점</span>
                  </div>
                  <span class="text-xs text-gray-400"><%= review.created_at.strftime("%Y.%m.%d") %></span>
                </div>
                <% if review.comment.present? %>
                  <p class="text-sm text-gray-700 leading-relaxed"><%= review.comment %></p>
                <% end %>
                <% if review.request&.address.present? %>
                  <p class="text-xs text-gray-400 mt-2">
                    <%= review.request.address&.truncate(20) %>
                    <% if review.request.symptom_type.present? %>
                      · <%= symptom_label(review.request.symptom_type) %>
                    <% end %>
                  </p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-8 text-center text-gray-500">
          <svg class="w-12 h-12 mx-auto text-gray-300 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
          </svg>
          <p class="text-sm">아직 리뷰가 없어요</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
