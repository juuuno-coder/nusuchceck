<div class="max-w-6xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">보험 신청 관리</h1>
    <p class="text-sm text-gray-500 mt-1">고객의 일상배상책임보험 신청을 심사합니다.</p>
  </div>

  <!-- 필터 -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 mb-6">
    <%= search_form_for @q, url: admin_insurance_claims_path, class: "flex flex-wrap gap-4 items-end" do |f| %>
      <div>
        <%= f.label :status_eq, "상태", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :status_eq,
              options_for_select([
                ["작성 중", "draft"], ["신청 완료", "submitted"],
                ["심사 중", "under_review"], ["승인", "approved"],
                ["반려", "rejected"], ["완료", "completed"]
              ], params.dig(:q, :status_eq)),
              { include_blank: "전체" },
              class: input_classes(:select) %>
      </div>
      <div>
        <%= f.submit "검색", class: btn_classes(:primary, :md) %>
        <%= link_to "초기화", admin_insurance_claims_path, class: btn_classes(:secondary, :md) %>
      </div>
    <% end %>
  </div>

  <% if @insurance_claims.any? %>
    <!-- 데스크톱 테이블 -->
    <div class="hidden md:block bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200" aria-label="보험 신청 목록">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">신청번호</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">신청자</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">사고 장소</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">사고일</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">상태</th>
            <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">신청일</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @insurance_claims.each do |claim| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-3">
                <%= link_to claim.claim_number, admin_insurance_claim_path(claim),
                      class: "text-sm font-mono text-blue-600 hover:text-blue-800" %>
              </td>
              <td class="px-4 py-3 text-sm text-gray-900"><%= claim.applicant_name %></td>
              <td class="px-4 py-3 text-sm text-gray-600"><%= claim.incident_address.truncate(25) %></td>
              <td class="px-4 py-3 text-sm text-gray-600"><%= claim.incident_date.strftime("%Y.%m.%d") %></td>
              <td class="px-4 py-3">
                <span class="px-2 py-1 rounded-full text-xs font-medium
                  <%= case claim.status
                      when 'draft' then 'bg-gray-100 text-gray-700'
                      when 'submitted' then 'bg-blue-100 text-blue-700'
                      when 'under_review' then 'bg-yellow-100 text-yellow-700'
                      when 'approved' then 'bg-green-100 text-green-700'
                      when 'rejected' then 'bg-red-100 text-red-700'
                      when 'completed' then 'bg-purple-100 text-purple-700'
                      end %>" role="status">
                  <%= claim.status_label %>
                </span>
              </td>
              <td class="px-4 py-3 text-sm text-gray-500"><%= claim.created_at.strftime("%Y.%m.%d") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- 모바일 카드 목록 -->
    <div class="md:hidden space-y-3">
      <% @insurance_claims.each do |claim| %>
        <%= link_to admin_insurance_claim_path(claim), class: "block bg-white rounded-xl shadow-sm border border-gray-100 p-4 hover:shadow-md transition" do %>
          <div class="flex items-center justify-between mb-2">
            <span class="text-sm font-mono text-gray-500"><%= claim.claim_number %></span>
            <span class="px-2 py-1 rounded-full text-xs font-medium
              <%= case claim.status
                  when 'draft' then 'bg-gray-100 text-gray-700'
                  when 'submitted' then 'bg-blue-100 text-blue-700'
                  when 'under_review' then 'bg-yellow-100 text-yellow-700'
                  when 'approved' then 'bg-green-100 text-green-700'
                  when 'rejected' then 'bg-red-100 text-red-700'
                  when 'completed' then 'bg-purple-100 text-purple-700'
                  end %>">
              <%= claim.status_label %>
            </span>
          </div>
          <p class="text-sm font-medium text-gray-900"><%= claim.applicant_name %></p>
          <p class="text-xs text-gray-600 mt-1"><%= claim.incident_address.truncate(40) %></p>
          <div class="flex items-center justify-between mt-2 text-xs text-gray-500">
            <span>사고일: <%= claim.incident_date.strftime("%Y.%m.%d") %></span>
            <span>신청일: <%= claim.created_at.strftime("%m.%d") %></span>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="mt-4">
      <%= paginate @insurance_claims %>
    </div>
  <% else %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <p class="text-gray-500 mt-4">보험 신청 내역이 없습니다.</p>
    </div>
  <% end %>
</div>
