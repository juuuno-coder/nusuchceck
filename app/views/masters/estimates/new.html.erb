<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to masters_request_path(@request), class: "text-sm text-blue-600 hover:text-blue-800 flex items-center" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      신고 상세로 돌아가기
    <% end %>
    <h1 class="text-2xl font-bold text-gray-900 mt-2">견적 작성</h1>
    <p class="text-sm text-gray-500 mt-1">신고 #<%= @request.id %> 에 대한 견적서를 작성합니다.</p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- 좌측: 견적 폼 -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-lg shadow p-6">
        <%= form_with(model: [@request, @estimate], url: masters_request_estimates_path(@request), class: "space-y-6") do |f| %>

          <% if @estimate.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
              <h3 class="text-sm font-medium text-red-800 mb-2">입력 오류가 있습니다:</h3>
              <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
                <% @estimate.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- 견적 항목 -->
          <div data-controller="estimate-items">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-lg font-semibold text-gray-900">견적 항목</h2>
              <button type="button"
                      data-action="click->estimate-items#add"
                      class="inline-flex items-center px-3 py-1.5 bg-blue-100 text-blue-700 rounded-md hover:bg-blue-200 text-sm font-medium">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                항목 추가
              </button>
            </div>

            <div data-estimate-items-target="container" class="space-y-4">
              <!-- 동적 항목 템플릿 (Stimulus에서 복제) -->
              <div class="border rounded-lg p-4 bg-gray-50" data-estimate-items-target="item">
                <div class="grid grid-cols-1 sm:grid-cols-6 gap-3">
                  <div class="sm:col-span-1">
                    <label class="block text-xs font-medium text-gray-500 mb-1">구분</label>
                    <select name="estimate[line_items][][category]"
                            class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm">
                      <option value="trip">출장비</option>
                      <option value="detection">탐지</option>
                      <option value="construction">공사</option>
                      <option value="material">자재</option>
                    </select>
                  </div>
                  <div class="sm:col-span-2">
                    <label class="block text-xs font-medium text-gray-500 mb-1">항목명</label>
                    <input type="text" name="estimate[line_items][][name]" placeholder="항목명"
                           class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-500 mb-1">단위</label>
                    <input type="text" name="estimate[line_items][][unit]" placeholder="식/m/개"
                           class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-500 mb-1">수량</label>
                    <input type="number" name="estimate[line_items][][quantity]" value="1" min="1"
                           class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm"
                           data-action="input->estimate-items#calculate">
                  </div>
                  <div>
                    <label class="block text-xs font-medium text-gray-500 mb-1">단가</label>
                    <input type="number" name="estimate[line_items][][unit_price]" value="0" min="0" step="1000"
                           class="w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm"
                           data-action="input->estimate-items#calculate">
                  </div>
                </div>
                <div class="flex items-center justify-between mt-3">
                  <span class="text-sm text-gray-600">
                    금액: <strong data-estimate-items-target="amount">₩0</strong>
                  </span>
                  <button type="button"
                          data-action="click->estimate-items#remove"
                          class="text-red-500 hover:text-red-700 text-sm font-medium">
                    삭제
                  </button>
                </div>
              </div>
            </div>
          </div>

          <!-- 비고 -->
          <div>
            <%= f.label :notes, "비고", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :notes,
                  rows: 3,
                  placeholder: "추가 설명이나 주의사항을 입력해 주세요.",
                  class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <!-- 유효기간 -->
          <div>
            <%= f.label :valid_until, "유효기간", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.date_field :valid_until,
                  value: @estimate.respond_to?(:valid_until) && @estimate.valid_until ? @estimate.valid_until : 14.days.from_now.to_date,
                  class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <!-- 제출 버튼 -->
          <div class="flex items-center justify-end gap-3 pt-4 border-t">
            <%= link_to "취소", masters_request_path(@request), class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-medium text-sm" %>
            <%= f.submit "견적 저장", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-medium text-sm cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 우측: 추천 항목 -->
    <div class="space-y-6">
      <% if defined?(@recommended_items) && @recommended_items&.any? %>
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-sm font-semibold text-gray-900 mb-3">추천 항목</h2>
          <p class="text-xs text-gray-500 mb-3">증상에 맞는 추천 항목입니다. 클릭하여 추가하세요.</p>
          <div class="space-y-2">
            <% @recommended_items.each do |item| %>
              <button type="button"
                      class="w-full text-left p-3 border rounded-lg hover:bg-blue-50 transition text-sm"
                      data-action="click->estimate-items#addFromRecommended"
                      data-category="<%= item.category %>"
                      data-name="<%= item.name %>"
                      data-unit="<%= item.unit %>"
                      data-price="<%= item.default_price %>">
                <div class="flex items-center justify-between">
                  <span class="font-medium text-gray-900"><%= item.name %></span>
                  <span class="text-xs text-gray-500"><%= item.category_label %></span>
                </div>
                <% if item.default_price.present? %>
                  <span class="text-xs text-blue-600"><%= number_to_currency(item.default_price, unit: "₩", precision: 0) %></span>
                <% end %>
              </button>
            <% end %>
          </div>
        </div>
      <% end %>

      <% if defined?(@standard_items) && @standard_items&.any? %>
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-sm font-semibold text-gray-900 mb-3">표준 항목</h2>
          <div class="space-y-2 max-h-96 overflow-y-auto">
            <% @standard_items.each do |item| %>
              <button type="button"
                      class="w-full text-left p-2 border rounded hover:bg-gray-50 transition text-sm"
                      data-action="click->estimate-items#addFromRecommended"
                      data-category="<%= item.category %>"
                      data-name="<%= item.name %>"
                      data-unit="<%= item.unit %>"
                      data-price="<%= item.default_price %>">
                <span class="text-gray-900"><%= item.name %></span>
                <span class="text-xs text-gray-400 ml-1">(<%= item.category_label %>)</span>
              </button>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
